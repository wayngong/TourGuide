<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Tab Style-->
    <style name="tab_style">
        app:tabBackground="@color/tab_background"
        app:tabIndicatorColor="@color/tab_indicator"
        app:tabTextColor="@color/tab_text"
        app:tabSelectedTextColor="@color/tab_selected_text"
        app:tabMode="fixed"
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/textGrayColor</item>
        <item name="tabSelectedTextColor">@color/textWhiteColor</item>
    </style>

    <!--Item Name Style-->
    <style name="item_list_name">
        <item name="android:fontFamily">noto-medium</item>
        <item name="android:textColor">@color/textBlackColor</item>
        <item name="android:textSize">@dimen/list_item_name_text_size</item>
    </style>

    <!--Item Content Style-->
    <style name="item_list_content">
        <item name="android:fontFamily">noto-regular</item>
        <item name="android:textColor">@color/textGrayColor</item>
        <item name="android:textSize">@dimen/list_item_content_text_size</item>
    </style>

</resources>
